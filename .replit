modules = ["php-8.2", "python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["sqlite", "php82"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Working Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Product Auto Update"

[[workflows.workflow]]
name = "Working Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python bot_working.py"

[[workflows.workflow]]
name = "Web Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "php -S 0.0.0.0:5000 -t web_interface"
waitForPort = 5000

[[workflows.workflow]]
name = "Product Auto Update"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd web_interface && php cron_scheduler.php"

[workflows.workflow.metadata]
outputType = "console"

[agent]
expertMode = true

[[ports]]
localPort = 5000
externalPort = 80
